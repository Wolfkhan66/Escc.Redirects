@{
    ViewBag.Title = "Short Urls Page";
}
@model System.Data.DataTable
@using System.Data;
<head>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
</head>

<div class="jumbotron alert-info">
    <h1>Short Urls</h1>
    <p class="lead">
        These short URLs should be used for publicity. Each one is preceded by "eastsussex.gov.uk/".
        For example "arts" becomes "eastsussex.gov.uk/arts".
    </p>
    <p>
        For most recent, sort by ID. The higher the ID, The more recent.
    </p>
    <p><a class="btn btn-info" href="~/Home/Add?Id=1">Add Redirect &raquo;</a></p>
</div>

<style media="screen" type="text/css">
    table.dataTable tbody td {
        word-break: break-word;
        vertical-align: top;
    }
</style>

<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered display" cellspacing="0" width="100%" id="contentTable">
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Columns)
                        {
                            <td>@row[col.ColumnName]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#contentTable').DataTable({
        aLengthMenu: [
            [10, 25, 50, 100, -1],
            [10, 25, 50, 100, "All"]
        ],
        iDisplayLength: 10
    });
</script>
